generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  summary   String
  tags      String[]
  link      String?
  repo      String?
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  body      String
  createdAt DateTime @default(now())
}
